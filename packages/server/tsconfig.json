{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "paths": {
      "@aeriajs/common": [
        "../common/dist"
      ],
      "@aeriajs/common/*": [
        "../common/dist/*"
      ],
      "@aeriajs/core": [
        "../core/dist"
      ],
      "@aeriajs/entrypoint": [
        "../entrypoint/dist"
      ],
      "@aeriajs/builtins": [
        "../builtins/dist"
      ],
      "@aeriajs/types": [
        "../types/dist"
      ],
      "@aeriajs/http": [
        "../http/dist"
      ],
      "@aeriajs/node-http": [
        "../node-http/dist"
      ]
    }
  },
  "include": [
    "@types/*.d.ts",
    "src"
  ]
}
